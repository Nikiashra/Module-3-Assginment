
import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Background Color Changer',
      theme: ThemeData(
        primarySwatch: Colors.blue,
      ),
      home: ColorScreen(),
    );
  }
}
class ColorScreen extends StatefulWidget {
  @override
  _ColorScreenState createState() => _ColorScreenState();
}

class _ColorScreenState extends State<ColorScreen> {
  double _redValue = 0.0;
  double _greenValue = 0.0;
  double _blueValue = 0.0;

  void _onRedChanged(double value) {
    setState(() {
      _redValue = value;
    });
  }

  void _onGreenChanged(double value) {
    setState(() {
      _greenValue = value;
    });
  }

  void _onBlueChanged(double value) {
    setState(() {
      _blueValue = value;
    });
  }

  @override
  Widget build(BuildContext context) {
    Color backgroundColor = Color.fromRGBO(
      _redValue.round(),
      _greenValue.round(),
      _blueValue.round(),
      1,
    );

    return Scaffold(
      appBar: AppBar(
        title: Text('Background Color Changer'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: <Widget>[
            Text(
              'Change background color',
              style: TextStyle(fontSize: 18),
            ),
            SizedBox(height: 20),
            Container(
              width: 300,
              child: Column(
                children: [
                  Slider(
                    value: _redValue,
                    min: 0,
                    max: 255,
                    onChanged: _onRedChanged,
                    divisions: 255,
                    label: 'Red: ${_redValue.round()}',
                  ),
                  Slider(
                    value: _greenValue,
                    min: 0,
                    max: 255,
                    onChanged: _onGreenChanged,
                    divisions: 255,
                    label: 'Green: ${_greenValue.round()}',
                  ),
                  Slider(
                    value: _blueValue,
                    min: 0,
                    max: 255,
                    onChanged: _onBlueChanged,
                    divisions: 255,
                    label: 'Blue: ${_blueValue.round()}',
                  ),
                ],
              ),
            ),
            SizedBox(height: 20),
            Container(
              width: 200,
              height: 200,
              color: backgroundColor,
            ),
          ],
        ),
      ),
    );
  }
}
