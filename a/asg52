import 'package:flutter/material.dart';

void main()
{
  runApp(MaterialApp(home: Myapp(),debugShowCheckedModeBanner: false,));
}
class Myapp extends StatefulWidget {
  const Myapp({super.key});

  @override
  State<Myapp> createState() => _MyappState();
}

class _MyappState extends State<Myapp> {

  TextEditingController First = TextEditingController();
  TextEditingController Second = TextEditingController();

  @override

  String arithmatic =" ";
  String result = " ";


  Widget build(BuildContext context) {
    return Scaffold(appBar: AppBar(title: Text('Calculation'),),
      body: Center(

        child: Column(

            children: [

              TextField(controller: First,decoration: InputDecoration(hintText: 'Enter First Value'),),
              TextField(controller: Second,decoration: InputDecoration(hintText: 'Enter Second Value'),),

              SizedBox(height: 20),
              Text("select option"),

              ListTile(
                title: const Text('Addition'),
                leading: Radio(
                  value: 'addition',
                  groupValue: arithmatic,
                  onChanged: (value)
                  {
                    setState(() {
                      double a = double.parse(First.text.toString());
                      double b = double.parse(Second.text.toString());

                      var c = a+b;

                      print(c);

                      arithmatic = value!;
                    });
                  },),
              ),
              ListTile(
                title: const Text('Subtraction'),
                leading: Radio(
                  value: 'Subtraction',
                  groupValue: arithmatic,
                  onChanged: (value)
                  {
                    setState(()
                    {

                      double a = double.parse(First.text.toString());
                      double b = double.parse(Second.text.toString());


                      var c = a-b;

                      print(c);

                      arithmatic = value!;

                    });
                  },),

              ),
              ListTile(
                title: const Text('Multiply'),
                leading: Radio(
                  value: 'multiply',
                  groupValue: arithmatic,
                  onChanged: (value)
                  {
                    setState(()
                    {
                      double a = double.parse(First.text.toString());
                      double b = double.parse(Second.text.toString());

                      var c = a*b;

                      print(c);

                      arithmatic = value!;
                    });
                  },),

              ),
              ListTile(
                title: const Text('Division'),
                leading: Radio(
                  value: 'Division',
                  groupValue: arithmatic,
                  onChanged: (value)
                  {
                    setState(()
                    {
                      double a = double.parse(First.text.toString());
                      double b = double.parse(Second.text.toString());

                      var c = a/b;

                      print(c);

                      arithmatic = value!;
                    });
                  },),

              ),
              SizedBox(height: 16.0),

              ElevatedButton(
                onPressed: () {
                double a = double.parse(First.text) ?? 0.0;
                double b = double.parse(Second.text) ?? 0.0;

                double resultValue = 0.0;

                  setState(() {
                  result = 'Result: $resultValue';
                  });
                },
                child: Text('Submit'),
              ),
              SizedBox(height: 16.0),

              Text(result, style: TextStyle(fontSize: 18.0)),


            ]
         ),

      ),

    );

  }
}
